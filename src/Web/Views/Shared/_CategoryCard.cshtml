@model Category

<div class="col-sm-4 col-md-4 col-lg-4">
    <div class="img-thumbnail">
        <img src="@Model.ThumbnailUrl" alt="" />
        <div class="caption">
            <h3>
                <a asp-controller="Home" asp-action="Index" asp-route-id="@Model.CategoryId">@Model.Name</a>
            </h3>
        </div>
    </div>
</div>