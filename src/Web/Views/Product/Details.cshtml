@model Product

<h2>@Model.Name</h2>

<div class="img-thumbnail">
    <img src="@Model.ImageUrl" alt="@Model.Name" />
    <div class="caption-full">
        <h3 class="text-right">@Model.Price.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("en-US"))</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <p>@Model.Description</p>
    </div>
</div>